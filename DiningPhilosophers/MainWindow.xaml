        <Label Name="PhilosopherFood4" Content="..." HorizontalAlignment="Left" Height="27" Margin="453,281,0,0" VerticalAlignment="Top" Width="67"/>
        <Label Name="PhilosopherFood3" Content="..." HorizontalAlignment="Left" Height="30" Margin="440,490,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Name="PhilosopherFood2" Content="..." HorizontalAlignment="Left" Height="30" Margin="168,490,0,0" VerticalAlignment="Top" Width="104"/>
